<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sample.frameworkapi.BiometricApiFragment">

    <CheckBox
        android:id="@+id/cb_check_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="return fail when enroll changed" />

    <Button
        android:id="@+id/btn_test_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test authorization"/>

    <Button
        android:id="@+id/btn_check_enroll_changed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="check enrolled info changed"/>

</LinearLayout>