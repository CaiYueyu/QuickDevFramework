<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomDrawableTextView">
        <attr name="t_drawableWidth" format="dimension" />
        <attr name="t_drawableHeight" format="dimension" />
        <attr name="t_drawableLeftWidth" format="dimension" />
        <attr name="t_drawableLeftHeight" format="dimension" />
        <attr name="t_drawableRightWidth" format="dimension" />
        <attr name="t_drawableRightHeight" format="dimension" />
        <attr name="t_drawableTopWidth" format="dimension" />
        <attr name="t_drawableTopHeight" format="dimension" />
        <attr name="t_drawableBottomWidth" format="dimension" />
        <attr name="t_drawableBottomHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomDrawableRadioButton">
        <attr name="r_drawableWidth" format="dimension" />
        <attr name="r_drawableHeight" format="dimension" />
        <attr name="r_drawableLeftWidth" format="dimension" />
        <attr name="r_drawableLeftHeight" format="dimension" />
        <attr name="r_drawableRightWidth" format="dimension" />
        <attr name="r_drawableRightHeight" format="dimension" />
        <attr name="r_drawableTopWidth" format="dimension" />
        <attr name="r_drawableTopHeight" format="dimension" />
        <attr name="r_drawableBottomWidth" format="dimension" />
        <attr name="r_drawableBottomHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BadgeView">
        <attr name="badge_color" format="color"/>
        <attr name="badge_defaultSize" format="dimension"/>
        <attr name="badge_hideOnZero" format="boolean" />
        <attr name="badge_numberEllipsis" format="string|reference" />
        <attr name="badge_ellipsisDigit" format="integer" />
        <attr name="badge_strokeWidth" format="dimension" />
        <attr name="badge_strokeColor" format="color" />
    </declare-styleable>

    <declare-styleable name="HorizontalNumberPicker">
        <attr name="hnp_buttonWidth" format="dimension"/>
        <attr name="hnp_buttonHeight" format="dimension" />
        <attr name="hnp_addImage" format="reference" />
        <attr name="hnp_subtractImage" format="reference" />
        <attr name="hnp_numberWidth" format="dimension" />
        <attr name="hnp_numberHeight" format="dimension" />
        <attr name="hnp_numberTextSize" format="dimension" />
        <attr name="hnp_numberTextColor" format="reference" />
        <attr name="hnp_numberBackground" format="reference" />
        <attr name="hnp_contentMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LoadingView" >
        <attr name="l_emptyView" format="reference" />
        <attr name="l_loadingView" format="reference" />
        <attr name="l_errorView" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomRatingBar" >
        <attr name="starCount" format="integer"/>
        <attr name="starWidth" format="dimension"/>
        <attr name="starHeight" format="dimension"/>
        <attr name="starPadding" format="dimension"/>
        <attr name="starMargin" format="dimension"/>
        <attr name="starClickable" format="boolean"/>
        <attr name="rating" format="float"/>
        <attr name="emptyImage" format="reference"/>
        <attr name="filledImage" format="reference"/>
        <attr name="halfImage" format="reference"/>
        <attr name="showHalf" format="boolean"/>
        <attr name="showPercent" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SettingItemView">
        <attr name="itemview_itemType" format="enum">
            <enum name="typeNormal" value="0"/>
            <enum name="typeSwitch" value="1"/>
        </attr>
        <attr name="itemview_icon" format="reference"/>
        <attr name="itemview_iconSize" format="dimension"/>
        <attr name="itemview_name" format="string" />
        <attr name="itemview_nameTextSize" format="dimension" />
        <attr name="itemview_nameTextColor" format="color" />
        <attr name="itemview_info" format="string"/>
        <attr name="itemview_infoTextColor" format="color" />
        <attr name="itemview_infoTextSize" format="dimension" />
        <attr name="itemview_infoImageSrc" format="reference" />
        <attr name="itemview_dividerVisible" format="boolean" />
        <attr name="itemview_dividerSize" format="dimension" />
        <attr name="itemview_dividerColor" format="color" />
        <attr name="itemview_showMoreIcon" format="boolean" />
        <attr name="itemview_switch_checked" format="boolean" />
        <attr name="itemview_switch_drawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ItemSwitch">
    <attr name="itemswitch_name" format="string" />
    <attr name="itemswitch_nameTextSize" format="dimension" />
    <attr name="itemswitch_nameTextColor" format="color" />
    <attr name="itemswitch_checked" format="boolean" />
    <attr name="itemswitch_dividerVisible" format="boolean" />
    <attr name="itemswitch_dividerSize" format="dimension" />
    <attr name="itemswitch_dividerColor" format="color" />
    <attr name="itemswitch_switchDrawable" format="reference"/>
    </declare-styleable>
</resources>